# Justfile for crystal module - test commands

# Default: show all available commands
default:
    @just --list

# Run all tests
test:
    cargo test --package crystal

# Run tests with output
test-verbose:
    cargo test --package crystal -- --nocapture

# Run a specific test
test-specific TEST:
    cargo test --package crystal --lib {{TEST}}

# Run tests sequentially (useful for debugging race conditions)
test-serial:
    cargo test --package crystal -- --test-threads=1

# Run the integration test
test-integration:
    cargo test --package crystal --lib test_crystal_integration
